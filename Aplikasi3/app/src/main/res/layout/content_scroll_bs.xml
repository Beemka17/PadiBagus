<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_brownspot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Brownspot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginTop="16sp"
            app:cardCornerRadius="8sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/jdul1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penjelasan"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/productsans"/>
                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="120sp"
                    android:layout_height="5sp"
                    android:src="@drawable/line"
                    android:layout_below="@id/jdul1"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penyakit Brownspot pada tanaman padi adalah penyakit yang disebabkan oleh jamur bernama Bipolaris oryzae. Penyakit ini biasanya memengaruhi daun bagian bawah tanaman terutama saat tanaman sudah berumur. Infeksi yang parah dapat mengurangi hasil panen padi"
                    android:textSize="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_below="@id/line1"
                    android:layout_marginTop="16sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/productsans"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginTop="16sp"
            app:cardCornerRadius="8sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp"
                >

                <TextView
                    android:id="@+id/jdul2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gejala"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/productsans"/>
                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="80sp"
                    android:layout_height="5sp"
                    android:src="@drawable/line"
                    android:layout_marginTop="5sp"
                    android:layout_below="@id/jdul2"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciri umum dari penyakit ini adalah munculnya bercak coklat dengan lingkaran kuning pada daun"
                    android:textSize="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_below="@id/line2"
                    android:layout_marginTop="16sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/productsans"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"
            app:cardCornerRadius="8sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/jdul3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengendalian"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/productsans"/>
                <ImageView
                    android:id="@+id/line3"
                    android:layout_width="150sp"
                    android:layout_height="5sp"
                    android:src="@drawable/line"
                    android:layout_below="@id/jdul3"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Penggunaan fungisida (Iprodion,\n  Propikonazol, Azoksistrobin, \n  Trifloksistobin)\n  \n- Merendam benih dalam air panas\n  (53-54 Celcius) selama 10-12 menit \n"
                    android:textSize="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_below="@id/line3"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/productsans"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>