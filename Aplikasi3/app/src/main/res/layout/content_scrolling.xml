<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hispa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginTop="16sp"
            app:cardCornerRadius="8sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/jdul1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penjelasan"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/productsans"/>
                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="130sp"
                    android:layout_height="5sp"
                    android:src="@drawable/line"
                    android:layout_below="@id/jdul1"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penyakit Hispa pada tanaman padi sebenarnya bukan penyakit, melainkan serangan hama. Hispa (Hispa spp.) adalah jenis serangga kecil yang sering menyerang tanaman padi, terutama pada tahap pertumbuhan muda"
                    android:textSize="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_below="@id/line1"
                    android:layout_marginTop="16sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/productsans"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginTop="16sp"
            app:cardCornerRadius="8sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/jdul2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gejala"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/productsans"/>
                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="80sp"
                    android:layout_height="5sp"
                    android:src="@drawable/line"
                    android:layout_below="@id/jdul2"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terdapat garis-garis putih dan paralel sepanjang sumbu utama daun. Tanaman yang terinfeksi akan mengering dan rusak."
                    android:textSize="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_below="@id/line2"
                    android:layout_marginTop="16sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/productsans"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"
            app:cardCornerRadius="8sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/jdul3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengendalian"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/productsans"/>
                <ImageView
                    android:id="@+id/line3"
                    android:layout_width="170sp"
                    android:layout_height="5sp"
                    android:src="@drawable/line"
                    android:layout_below="@id/jdul3"
                    android:layout_marginTop="5sp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Penggunaan Pestisida\n  \n- Penggunaan parasitoid atau \n  predator alami hama hispa\n  \n- Pemotongan daun yang terineksi"
                    android:textSize="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_below="@id/line3"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/productsans"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>